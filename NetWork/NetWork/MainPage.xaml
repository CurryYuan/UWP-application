<Page
    x:Class="NetWork.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NetWork"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="HotPink">
        <TextBox Name="locationName" Width="150" Height="40" HorizontalAlignment="Left"/>
        <Button Content="Search" Click="Button_Click_1"/>
        <Button Content="My Location" Click="Button_Click"/>
        <TextBlock Name="ResultTextBlock"/>
        <Image Name="ResultImage" Width="200" Height="200"/>
        <TextBox Name="JsonBox" Width="150" Height="40" HorizontalAlignment="Left"/>
        <Button Content="Search" Click="Button_Click_3"/>
        <Button Content="JsonSearch" Click="Button_Click_2"/>
        <TextBlock Name="JsonBlock"/>
        <Image Name="JsonImage" Width="200" Height="200"/>
    </StackPanel>
</Page>
